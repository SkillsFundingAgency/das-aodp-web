@{
	ViewData["Title"] = "Home Page";
}

<div class="govuk-width-container">
	<main class="govuk-main-wrapper">
		<div class="govuk-grid-row">
			<div class="govuk-grid-column-two-thirds">

				<h1 class="govuk-heading-xl">
					Review qualifications for funding approval
				</h1>
				<p class="govuk-body-m">
					Use this service to review qualifications to decide if they meet the criteria for funding approval.
				</p>

				<p class="govuk-body-m">
					You'll need a DfE account to use this service. If you don't have a DfE account, you can create one now.
				</p>
				<a asp-controller="home" asp-action="signin" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
					Start now
					<svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
						<path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
					</svg>
				</a>
			</div>
		</div>
	</main>
</div>