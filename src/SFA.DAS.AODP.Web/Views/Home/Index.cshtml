@{
	ViewData["Title"] = "Home Page";
}

<div class="govuk-width-container">
	<main class="govuk-main-wrapper">
		<div class="govuk-grid-row">
			<div class="govuk-grid-column-two-thirds">

				<h1 class="govuk-heading-xl">
					Please select a start Page
				</h1>
				<div class="govuk-form-group">
					<label class="govuk-label" for="sort">
						Select a landing page to authenticate from
					</label>
					<p>
						<a href="admin" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
							Admin start page
							<svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
								<path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
							</svg>
						</a>
					</p>
					<p>
						<a href="apply" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
							Apply start page
							<svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
								<path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
							</svg>
						</a>
					</p>
					<p>
						<a href="review" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
							Review start page
							<svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
								<path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
							</svg>
						</a>
					</p>
					<hr />
					<p>
						<a href="/authentication/signin" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
							Auto redirect to appropriate landing area
							<svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
								<path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
							</svg>
						</a>
					</p>
				</div>

			</div>
		</div>
	</main>
</div>