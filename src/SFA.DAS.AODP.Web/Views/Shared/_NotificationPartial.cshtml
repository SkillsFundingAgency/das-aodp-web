@using SFA.DAS.AODP.Web.Enums
@if (ViewBag.NotificationType == ViewNotificationMessageType.Error)
{
    <div class="govuk-error-summary" data-module="govuk-error-summary">
        <div role="alert">
            <h2 class="govuk-error-summary__title">
                There is a problem
            </h2>
            <div class="govuk-error-summary__body">
                <ul class="govuk-list govuk-error-summary__list">
                    <li>
                        There was an error when processing that request, please try again later.
                    </li>
                </ul>
            </div>
        </div>
    </div>
}

else if (ViewBag.NotificationType == ViewNotificationMessageType.Success)
{
    <div class="govuk-notification-banner govuk-notification-banner--success" role="alert" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
        <div class="govuk-notification-banner__header">
            <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                Success
            </h2>
        </div>
        <div class="govuk-notification-banner__content">
            <h3 class="govuk-notification-banner__heading">
                @ViewBag.NotificationMessage
            </h3>
        </div>
    </div>
}
