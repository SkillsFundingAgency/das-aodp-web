@{
    ViewData["Title"] = "Review";
}

<div class="govuk-width-container">
    <main class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds" id="guide-contents">

                <div class="gem-c-heading govuk-!-margin-bottom-6">

                    <h1 class="gem-c-heading__text govuk-heading-l">
                        Admin
                    </h1>
                </div>
                <p>Use this service to manage forms.</p>
                <p>
                    <a asp-controller="Forms" asp-action="Index" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
                        Start now
                        <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
                        </svg>
                    </a>
                </p>
                <govuk-inset-text>
                    You'll need a DfE account to use this service. If you don't have a DfE account , you can create one now.
                    <br /><br />
                    <a class="govuk-link" href="https://profile.signin.education.gov.uk/register">Create a new DfE account</a>
                </govuk-inset-text>
            </div>
        </div>
    </main>
</div>