@using static SFA.DAS.AODP.Web.Models.FormBuilder.Question.EditQuestionViewModel
@model CheckboxOptions

<div class="govuk-form-group">
    <govuk-input disabled="@(!ViewBag.IsEditable)"
                 name="Checkbox[MinNumberOfOptions]"
                 type="number"
                 asp-for="MinNumberOfOptions"
                 input-class="govuk-input--width-3"
                 inputmode="numeric" pattern="[0-9]*"
                 spellcheck="false">
        <govuk-input-label is-page-heading="false" class="govuk-label--s">What is the minimum number of options? (optional)</govuk-input-label>
    </govuk-input>
</div>

<div class="govuk-form-group">
    <govuk-input disabled="@(!ViewBag.IsEditable)"
                 name="Checkbox[MaxNumberOfOptions]"
                 type="number"
                 asp-for="MaxNumberOfOptions"
                 input-class="govuk-input--width-3"
                 inputmode="numeric" pattern="[0-9]*"
                 spellcheck="false">
        <govuk-input-label is-page-heading="false" class="govuk-label--s">What is the maximum number of options? (optional)</govuk-input-label>
    </govuk-input>
</div>
