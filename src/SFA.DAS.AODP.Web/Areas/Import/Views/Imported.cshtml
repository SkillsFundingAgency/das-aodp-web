@{
    Layout = "_Layout";
    var heading = ViewBag.Heading as string ?? "Defunding list imported";
}

<div class="govuk-width-container">
    <main class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <div class="govuk-panel govuk-panel--confirmation">
                    <h1 class="govuk-panel__title">@heading</h1>
                </div>

                <h2 class="govuk-heading-s">What you can do now</h2>
                <ul class="govuk-list">
                    <li>
                        <a class="govuk-link" asp-area="Review" asp-controller="Home" asp-action="Index">
                            Go to the QFAST homepage to manage qualification funding applications
                        </a>
                    </li>
                    <li>
                        <a class="govuk-link" asp-area="Admin" asp-controller="OutputFile" asp-action="Index">
                            Download a record of all active and archived funding requests
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </main>
</div>