@{
    ViewData["Title"] = "Review";
}

<div class="govuk-width-container">
    <main class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds govuk-!-margin-top-6" id="guide-contents">

                <div class="gem-c-heading govuk-!-margin-bottom-6">

                    <h1 class="gem-c-heading__text govuk-heading-l">
                        Review Qualifications for funding approval
                    </h1>
                </div>
                <p>Use this service to review qualifications to decide if they meet the criteria for funding approval.</p>                                
                <p>
                    <a asp-area="Review" asp-controller="home" asp-action="signin" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
                        Start now
                        <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
                        </svg>
                    </a>
                </p>             
                <govuk-inset-text>
                    You'll need a Dfe account to use this service. If you don't have a DFE account , you can create one now.
                    <br /><br />
                    <a class="govuk-link" href="https://profile.signin.education.gov.uk/register">Create a DfE Sign-in account</a>
                </govuk-inset-text>              
            </div>
        </div>
    </main>
</div>